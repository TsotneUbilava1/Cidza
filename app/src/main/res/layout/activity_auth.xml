<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#444444"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AuthActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="ავტორიზაცია"
        android:textColor="#FFF"
        android:textSize="18sp"
        android:textStyle="normal" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cidza"
        android:layout_gravity="center"
        android:layout_margin="40dp"/>
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="ელ-მისამართი"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/editTX1"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="3dp"
            android:background="@drawable/edit_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="პაროლი"
            android:textColor="#FFF"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/editTX2"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_margin="3dp"
            android:background="@drawable/edit_text" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textColor="#707070"
            android:textSize="11sp"
            android:text="დაგავიწყდა პაროლი?"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/login"
                android:layout_width="230dp"
                android:layout_height="28dp"
                android:background="@drawable/next_button"
                android:text="შესვლა"
                android:textSize="13sp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"/>
            <LinearLayout
                android:layout_margin="15sp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFF"
                    android:textSize="11sp"
                    android:text="არ გაქვთ ანგარიში??"/>
                <TextView
                    android:id="@+id/regBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="რეგისტრაცია"
                    android:paddingLeft="5sp"
                    android:textSize="11sp"
                    android:textColor="#FFD180"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>